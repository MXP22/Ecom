@model AccsEco.Models.Produits
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

<div class="container">

    @using (Html.BeginForm())
    {
        
            @Html.AntiForgeryToken()
            <div class="form-group">

                @Html.LabelFor(model => model.codebarre, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                @Html.TextBoxFor(model => model.codebarre, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class=" form-group">

                @Html.LabelFor(model => model.designation, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                @Html.TextBoxFor(model => model.designation, htmlAttributes: new { @class = "form-control" })

            </div>

            <div class=" form-group">

                @Html.LabelFor(model => model.Desciption, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                @Html.TextAreaFor(model => model.Desciption, htmlAttributes: new { @class = "form-control" })

            </div>
            <div class=" form-group">

                @Html.LabelFor(model => model.qte, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                @Html.TextBoxFor(model => model.qte, htmlAttributes: new { @class = "form-control" })

            </div>
            <div class=" form-group">

                @Html.LabelFor(model => model.PrixU, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                @Html.TextBoxFor(model => model.PrixU, htmlAttributes: new { @class = "form-control" })

            </div>
            <div class=" form-group">

                @Html.LabelFor(model => model.PrixBarre,  new { htmlAttributes = new { @class = "control-label col-md-2" } }    )
                @Html.TextBoxFor(model => model.PrixBarre, htmlAttributes:new { @class = "form-control" })

            </div>
            <div class=" form-group">

                @Html.Label("Image")
                <input type="file" multiple="multiple" />

            </div>


            <div class="form-group">

                <input type="submit"  value="Valider" />

            </div>







    }




</div>
